---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import Banner from "../../sections/Banner.astro";
import "@fontsource/varela-round";
import ListOfTutorials from "../../components/ListOfTutorials.jsx";
import Quote from "../../sections/Quote.astro";
const tutorials = await getCollection("tutorials");
---

<Layout title="Tutorials | Doubling Creativity">
  <Banner
    title="Tutoriales"
    prhase="“Descubrí que podía decir las cosas con color y formas, cosas que no podía decir de otra manera porque no encontraba las palabras.” Georgia O’Keeffe (1887-1986)."
    img="/img/image-banner.webp"
  />
  <ListOfTutorials tutorials={tutorials} client:visible />
  <Quote
    text="A veces pienso que lo peor es la «mundanidad» actual de toda la escena [artística]. Es la cosa más engañosa, corruptora y transitoria, llena de chutes y diversión, pero que tan poco tiene que ver con lo que realmente es. Tiene que ver con nuestros tiempos, un pacto desesperado sobre el poder de la inmediatez. Pero cada vez me preocupa menos como problema. ¿Y? No hay ninguna amenaza."
    author="Helen Frankenthaler"
    image="/img/authors/Helen.webp"
  />
</Layout>
